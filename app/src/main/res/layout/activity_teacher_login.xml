<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/app_background_gradient"
    android:layout_height="match_parent"
    tools:context=".TeacherLoginActivity">

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginStart="105dp"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="150dp"
        android:src="@drawable/splash_screen_logo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.185"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:padding="15dp"
        android:id="@+id/container_login"
        android:layout_width="305dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:background="@drawable/outline"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.358"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView5"
        app:layout_constraintVertical_bias="0.289">

        <EditText
            android:id="@+id/phone_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="7dp"
            android:background="@drawable/box_outline"
            android:drawableStart="@drawable/phone_icon"
            android:drawablePadding="10dp"
            android:ems="10"
            android:hint="PHONE NUMBER"
            android:inputType="number"
            android:maxLength="10"
            android:padding="10dp"
            android:textColor="@color/border"
            android:textColorHint="@color/border"/>

        <EditText
            android:id="@+id/password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="7dp"
            android:background="@drawable/box_outline"
            android:drawableStart="@drawable/password_icon"
            android:drawablePadding="10dp"
            android:ems="10"
            android:hint="PASSWORD"
            android:padding="10dp"
            android:textColor="@color/border"
            android:textColorHint="@color/border"/>

        <TextView
            android:id="@+id/forget_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginStart="15dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="15dp"
            android:paddingTop="5dp"
            android:text="Forget Password ?"
            android:textColor="@color/text"
            android:textSize="17sp" />

        <Button
            android:id="@+id/teacher_login_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="15dp"
            android:background="@drawable/my_custom_buttton_style"
            android:text="LOGIN"
            android:textColor="@color/gradient_starting"
            android:textSize="25dp" />

        <TextView
            android:id="@+id/not_registered_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="New Teacher? Register HERE!"
            android:textStyle="bold"
            android:textColor="@color/borders_color"
            android:textSize="18sp"
            android:gravity="center"
            android:layout_marginTop="10dp"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
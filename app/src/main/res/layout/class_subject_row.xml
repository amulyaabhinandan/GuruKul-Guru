<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/subjects_holder_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@color/borders_color"
    android:padding="5dp"
    android:layout_margin="2.55dp"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/subject_row_subjectimage"
        android:layout_width="125dp"
        android:layout_height="125dp"
        app:srcCompat="@drawable/accounts" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_gravity="center"
        android:padding="5dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/subject_row_subjectname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ACCCOUNTS"
            android:textStyle="bold"
            android:textSize="22sp"
            android:textColor="@color/border"
            android:layout_gravity="center"/>

        <TextView
            android:id="@+id/subject_row_subjectcode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="S506"
            android:textStyle="bold"
            android:textSize="22sp"
            android:textColor="@color/border"
            android:layout_gravity="center"/>
    </LinearLayout>
</LinearLayout>